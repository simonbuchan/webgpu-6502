{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "@webgpu/types"],
    "verbatimModuleSyntax": true,
    "customConditions": [
      "browser"
    ]
  },
  "include": [
    "src"
  ]
}